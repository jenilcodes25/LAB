import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.net.ServerSocket;
import java.net.Socket;

static ServerSocket ss;
static Socket s;
static DataInputStream dis;
static DataOutputStream dout;

SendButton
        try{
        String msg="";
